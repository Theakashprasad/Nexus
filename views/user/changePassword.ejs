<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/dist/output.css">
</head>
<body>
    
        <!-- change password  -->
        <section id="changePassword" class=" bg-gray-50 dark:bg-gray-50">
            <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
               
                <div class="w-full p-6 bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md dark:bg-gray-200 dark:border-gray-300 sm:p-8">
                    <h2 class="mb-1 text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-black">
                        Change Password
                    </h2>
                    <form class="mt-4 space-y-4 lg:mt-5 md:space-y-5" action="/changePasswordPost" method="post" onsubmit="return v()">
                        <div>
                            <label for="" class="block mb-2 text-sm font-medium text-gray-900 dark:text-black">current password</label>
                            <input type="text" name="currentPassword" id="email" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-400 dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Enter your current password" >
                        </div>
                        <div>
                            <label for="" class="block mb-2 text-sm font-medium text-gray-900 dark:text-black">New Password</label>
                            <input type="password" oninput="passwordOneValidation()" name="newPassword" id="passwordOne" placeholder="••••••••" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-400 dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:ring-blue-500 dark:focus:border-blue-500" >
                            <p id="passwordOneError" class="text-red-500 text-xs"></p>
                        </div>
                        <div>
                            <label for="" class="block mb-2 text-sm font-medium text-gray-900 dark:text-black">Confirm password</label>
                            <input type="confirm-password" oninput="passwordTwoValidation()" name="confirmPassword" id="passwordTwo" placeholder="••••••••" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-400 dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:ring-blue-500 dark:focus:border-blue-500" >
                            <p id="passwordTwoError" class="text-red-500 text-xs"></p>
                        </div>
                        <div class="flex items-center justify-between">
                            <a href="/forgetPassword" class="text-sm font-medium text-primary-600 hover:underline underline">Forgot password?</a>
                        </div>
                        <p class="text-center text-red-600"><%= message %></p>
                        <button type="submit" class="w-full text-black bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 underline">Reset passwod</button>
                    </form>
                </div>
            </div>
          </section>    

<script>
function v(){
    return passwordOneValidation() && passwordTwoValidation()
}
   
    function passwordOneValidation(){
  const passwordOne = document.getElementById("passwordOne").value;
  const passwordOneError = document.getElementById('passwordOneError')
  const passwordPattern = /^(?=.*[a-zA-Z])(?=.*\d).{8,}$/;
      if (!passwordPattern.test(passwordOne)) {
        passwordOneError.innerText = "Password must be at least 8 characters and contain both letters and numbers"
      return false
    } else {
        passwordOneError.innerText = ""
    return true  
    }
}

const passwordOneInput = document.getElementById("passwordOne");
const passwordTwoInput = document.getElementById("passwordTwo");
const passwordTwoError = document.getElementById("passwordTwoError");
function passwordTwoValidation() {
    const passwordOne = passwordOneInput.value;
    const passwordTwo = passwordTwoInput.value;

    if (passwordTwo === passwordOne) {
        passwordTwoError.innerText = "";
        return true
    } else {
        passwordTwoError.innerText = "Passwords do not match!";
        return false
    }
}

</script>

</body>
</html>