          <p class="text-lg md:text-xl  font-semibold leading-6 xl:leading-5 text-gray-800">Customerâ€™s Cart</p>
          <% let subTotalPrice=0 %>
          <% let sizeLib = {
            0 : '6',
            1 : '7',
            2 : '8',  
            3 : '9'
          } %>
          <% productIdData.forEach((proId)=>{ %>
                <%proId.size.forEach((size,i)=>{%>
                 <% if(size!==0){%>

                     
