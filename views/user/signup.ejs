<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/dist/output.css">
    <!-- <script src="https://cdn.tailwindcss.com"></script> -->
</head>
<body>

    <section class="bg-gray-50 relative" style="background-image: url('/upload/male.jpg'); background-size: cover; background-position: center;">
        <div class="absolute inset-0 bg-cover bg-center" style="filter: blur(10px);"></div>
        <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0 relative z-10">
            <div class="w-full bg-gray-400 rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                  <p class="text-white font-extrabold text-center pb-6">_NEXUS_</p>
                  <h1 class="text-xl text-center font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                SIGN IN TO YOUR ACCOUNT
              </h1>
              <form class="space-y-4 md:space-y-6" action="/usersignup" method="post" onsubmit="return v()">

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

                  <div>
                    <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">User name</label>
                    <input oninput="nameValidation()" type="text" name="name" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Enter the full name" >
                    <p id="nameError" class="text-white text-xs"></p>
                  </div>

                  <div>
                    <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Your email</label>
                    <input oninput="emailValidation()" type="email" name="email" id="email" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="name@company.com" >
                    <p id="emailError" class="text-white text-xs"></p>
                  </div>

                </div>
      
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

                  <div>
                    <label for="Phone" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Phone Number</label>
                    <input oninput="numberValidation()" type="tel" name="number" id="number" placeholder="Enter phone N0: " class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" >
                    <p id="numberError" class="text-white text-xs"></p>
                  </div>

                  <div>
                    <label for="password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password</label>
                    <input oninput="passwordOneValidation()" type="password" name="password" id="passwordOne" placeholder="••••••••" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" >
                    <p id="passwordOneError" class="text-white text-xs"></p>
                  </div>

                  <div>
                    <label for="password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Confirm Password</label>
                    <input oninput="passwordTwoValidation()" type="password" name="confirmPassword" id="passwordTwo" placeholder="••••••••" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" >
                    <p id="passwordTwoError" class="text-white text-xs"></p>
                  </div>

                  <div class="form-check mt-2">
                    <input class="form-check-input" type="checkbox" id="showPassword" onclick="togglePasswordVisibility()">
                    <label class="form-check-label" style="color:blanchedalmond;" for="showPassword">Show Password</label>
                </div>

                </div>
      
                <!-- error message -->
                <p class="font-semibold text-white"><%= message%></p>
                <p id="alert" class="text-white text-xs"></p>

                <button id="signUpForm" type="submit" class="w-full text-black  bg-gray-50 bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Sign in</button>
                <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                  already have an account ? <a href="/login" class="font-medium text-primary-600 hover:underline dark:text-primary-500">Login</a>
                </p>
                <h1 id="error" class="text-cyan-50"></h1>
              </form>
            </div>
          </div>
        </div>
      </section>
      

      <script>
        
function v() {
  const email = document.getElementById("email").value;
  const name = document.getElementById("name").value;
  const alert = document.getElementById("alert");

  if (email.trim() === "" || name.trim() === "" ) {
            alert.innerHTML="please fill all the field"
            return false; 
          }
    
    return emailValidation() && nameValidation() && passwordOneValidation() && numberValidation()
}
        function emailValidation(){
            const email = document.getElementById("email").value;
            const emailError = document.getElementById("emailError");
            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailPattern.test(email) ) {
                emailError.innerText = "wrong email"
                return false
            }else{
                emailError.innerText = "";
                return true
            }
        }


    function nameValidation() {
    const name = document.getElementById("name").value.trim();
    const nameError = document.getElementById("nameError");
    const onlyLettersRegex = /^[a-zA-Z]+$/;

    if (name === '' ) {
        nameError.innerText = "Can not add space";
        return false; // Indicate validation failure
    } else if (!onlyLettersRegex.test(name)) {
     nameError.innerText = "Name can only contain letters";
     return false; // Indicate validation failure
 }  else if(name.length < 5 ){
        nameError.innerText = "name should atleast above 5";
        return false; // Indicate validation failure
    }
    else {
        nameError.innerText = ""; // Clear error message
        return true; // Indicate validation success
    }
}

function passwordOneValidation(){
  const passwordOne = document.getElementById("passwordOne").value;
  const passwordOneError = document.getElementById('passwordOneError')
  const passwordPattern = /^(?=.*[a-zA-Z])(?=.*\d).{8,}$/;
      if (!passwordPattern.test(passwordOne)) {
        passwordOneError.innerText = "Password must be at least 8 characters and contain both letters and numbers"
      } else {
        passwordOneError.innerText = ""
      }
}
const passwordOneInput = document.getElementById("passwordOne");
const passwordTwoInput = document.getElementById("passwordTwo");
const passwordTwoError = document.getElementById("passwordTwoError");

function passwordTwoValidation() {
    const passwordOne = passwordOneInput.value;
    const passwordTwo = passwordTwoInput.value;

    if (passwordTwo === passwordOne) {
        passwordTwoError.innerText = "";
    } else {
        passwordTwoError.innerText = "Passwords do not match!";
    }
}
passwordTwoInput.addEventListener('input', passwordTwoValidation);

function numberValidation(){
    const number = document.getElementById("number").value;
    const numberError = document.getElementById("numberError");
    const mobilePattern = /^[6-9]\d{9}$/;

    if (!mobilePattern.test(number)) {
      numberError.innerText = "Invalid mobile number. Please enter a 10-digit number.";
      } else{
        numberError.innerText = "";
    }
}
      </script>

<script>
    function togglePasswordVisibility() {
        var passwordInput = document.getElementById("passwordOne");
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
        } else {
            passwordInput.type = "password";
        }
    }
  </script>

</body>
</html>