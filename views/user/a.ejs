<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Toggle Select Example</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
  <style>
    /* Add your custom styles here if needed */
  </style>
</head>
<body class="bg-gray-100 p-8">

  <!-- First button and select field -->
  <button class="bg-blue-500 text-white px-4 py-2 rounded" onclick="toggleSelect('select1')">Open Select 1</button>

  <select id="select1" class="hidden mt-4 p-2 border rounded">
    <option value="option1">Option 1</option>
    <option value="option2">Option 2</option>
    <option value="option3">Option 3</option>
  </select>

  <!-- Second button and select field -->
  <button class="bg-green-500 text-white px-4 py-2 rounded" onclick="toggleSelect('select2')">Open Select 2</button>

  <select id="select2" class="hidden mt-4 p-2 border rounded">
    <option value="optionA">Option A</option>
    <option value="optionB">Option B</option>
    <option value="optionC">Option C</option>
  </select>

  <script>
    function toggleSelect(selectId) {
      const allSelects = document.querySelectorAll('select'); // Get all select elements
      allSelects.forEach(select => {
        if (select.id === selectId) {
          // Toggle the selected select
          select.classList.toggle('hidden');
        } else {
          // Hide other selects
          select.classList.add('hidden');
        }
      });
    }
  </script>

</body>
</html>
