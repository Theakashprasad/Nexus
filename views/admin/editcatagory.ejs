<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Product</title>
  <!-- Add Tailwind CSS CDN link here -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    .container {
      width: 70%;
    }
  </style>
</head>

<body class="bg-gray-100 mt-64">
  <div class="container mx-auto p-6">
    <h1 class="text-2xl font-semibold mb-4">EDIT CATAGORY</h1>
    
    <form class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4" action="/admin/editCatagoryPost/<%= user._id %>"
      method="post" enctype="multipart/form-data">

            <!-- Category Image -->
       <div class="mb-4">
        <label for="productImage" class="block text-gray-700 text-sm font-bold mb-2">Category Image</label>
        <input type="file" id="categoryImage" name="image" placeholder="" 
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          accept="image/*">
          <img src="/upload/<%= user.category_img_url.substring(8) %>" alt="">
      </div>

      <!-- Category Name -->
      <div class="mb-4">
        <label for="productName" class="block text-gray-700 text-sm font-bold mb-2">Category Name</label>
        <input type="text" id="productName" name="categoryName" placeholder="<%= user. product_category %>"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
      </div>
      <!-- Category Description -->
      <div class="mb-4">
        <label for="categoryDescription" class="block text-gray-700 text-sm font-bold mb-2">Category Description</label>
        <input  type="text" id="categoryDescription" name="categoryDescription" placeholder="<%= user.category_description %>"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
         ></input>
      </div>

      <!-- Product DATE -->
      <div class="mb-4">
        <label for="categoryDate" class="block text-gray-700 text-sm font-bold mb-2">publish date</label>
        <input type="date" id="categoryDate" name="categoryPublishDate" min="0" step="0.01" 
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        <p><%=user.category_publishDate %></p>
      </div>

      <div class="flex items-center justify-between">
        <button type="submit"
          class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
          Add Category
        </button>
      </div>
    </form>
  </div>
</body>

</html>
